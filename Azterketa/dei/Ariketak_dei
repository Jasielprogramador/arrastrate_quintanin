3.ariketa
#include <sys/types.h>
#include <sys/stat.h>
#include <fcntl.h>
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#define STDOUT 1
#define SIZE 512
int main( int argc, char *argv[] ){
int fd, readbytes;
char buffer[SIZE];
if (argc != 2) {
printf ("\n erabili hurrengo deia: %s fitxategiaren izena\n", argv[0]);
exit (-1);
}
if( (fd = open( argv[1], O_RDWR )) == -1 ){
perror( "open" );
exit( -1 );
}
while( (readbytes = read( fd, buffer, SIZE )) != 0 ){
/*write( STDOUT, buffer, SIZE ); */
write( STDOUT, buffer, readbytes);
}
close( fd );
return 0;
}
gcc ariketa3.c -o ariketa3
./ariketa3 ariketa3.c

